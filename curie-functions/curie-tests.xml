<?xml version="1.0" encoding="UTF-8"?>
<ct:tests 
    xmlns:ct="http://ittl.gtri.gatech.edu/wr24/2010-03-03-1701/curie-test/1/"
    xmlns:ns1="http://example.org/ns1/"
    xmlns="http://example.org/default/">

  <!-- should be invalid -->
  <ct:safe-test safe-curie=""/>

  <ct:safe-test safe-curie="http://example.org/blah" result="http://example.org/blah"/>

  <ct:safe-test safe-curie="[:]" result="http://example.org/default/"/>

  <ct:safe-test safe-curie="[:value1]" result="http://example.org/default/value1"/>

  <!-- should be invalid -->
  <ct:safe-test safe-curie="[]"/>

  <ct:safe-test safe-curie="[:value1]" result="http://example.org/default/value1"/>

  <ct:safe-test safe-curie="[ns1:value1]" result="http://example.org/ns1/value1"/>

  <!-- bad namespace -->
  <ct:safe-test safe-curie="[ns2:value1]"/>

  <!-- checks for bad use of brackets -->
  <ct:safe-test safe-curie=" [ns1:value1]"/>

  <!-- checks for bad use of brackets -->
  <ct:safe-test safe-curie="[ns1:value1] "/>

  <!-- checks for bad use of brackets -->
  <ct:safe-test safe-curie="[[ns1:value1]"/>

</ct:tests>
